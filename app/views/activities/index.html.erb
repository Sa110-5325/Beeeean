<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render "layouts/sidebar" %>
    </div>
    <div class="col-sm-9">
      <div class="row justify-content-center mt-5">
        <% if @activities.exists? %>
          <% @activities.each do |activity| %>
            <%= render "activities/activity", activity: activity %>
          <% end %>
          <%= paginate @activities %>
        <% end %>
      </div>
    </div>
  </div>
</div>