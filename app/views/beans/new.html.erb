<div class="container post mt-1">
  <div class="row">
    <div class="col-3">
      <%= render "layouts/sidebar" %>
    </div>
    <div class="col-7">
      <div class="row pt-5">
        <div class="col-4 pb-5">
          <h1>📮</h1>
        </div>
      </div>
      <%= form_with model: @bean, url: beans_path, local: true do |f| %>
        <div class="container">
        <div class="row justify-content-center">
          <div class="col-2 text-right">
            <%= f.label :名前 %>
          </div>
          <div class="col-8">
            <%= f.text_field :name,class: "form-control-sm", :size => "40x5" %>
          </div>
        </div><br />
        <div class="row justify-content-center">
          <div class="col-2 text-right">
            <%= f.label :値段 %>
          </div>
          <div class="col-8">
            <%= f.text_field :price,class: "form-control-sm", :size => "40x5" %> 円
          </div>
        </div><br />
        <div class="row justify-content-center">
          <div class="col-2 text-right">
            <%= f.label :画像 %>
          </div>
          <div class="col-8">
            <%= f.attachment_field :image %>
          </div>
        </div><br />
        <div class="row justify-content-start" id="star" style="padding-left: 98px;">
          <div class="col-2">
            <%= f.label :評価 %>
            <%= f.hidden_field :rate, id: :review_star %>
          </div>
        </div><br />
        <script>
          $('#star').raty({
            size     : 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            scoreName: 'bean[rate]',
            half: true,
          });
        </script>
        <div class="row justify-content-center">
          <div class="col-2 text-right">
            <%= f.label :感想 %>
          </div>
          <div class="col-8">
            <%= f.text_area :info, :size => "40x5" %>
          </div>
        </div>
          <div class="col">
            <%= f.submit "投稿する", class: "btn btn-outline-warning" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>