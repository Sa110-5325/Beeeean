<% if bean.favorited_by?(current_user) %>
  <p>
    <%= link_to bean_favorites_path(bean),class: "btn btn-dark", method: :delete, remote: true do %>
      <i class="far fa-thumbs-up"></i><%= bean.favorites.count %>いいね済み
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to bean_favorites_path(bean),class: "btn btn-outline-light", method: :post, remote: true do %>
     <i class="far fa-thumbs-up"></i><%= bean.favorites.count %>いいねする
    <% end %>
  </p>
<% end %>