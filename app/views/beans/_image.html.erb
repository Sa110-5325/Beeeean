<a type="button" class="btn btn-white" data-toggle="modal" data-target="#myModal">
  <%= attachment_image_tag bean, :image, fallback: "no-image.jpg", style: "width: 400px; height: 300px; margin: 0 auto;", class: "prev" %>
</a>
<div class="modal fade mt-5 text-center" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <%= render "beans/chart" %>
  <div class="modal-dialog" role="document"></div>
  <a type="button" class="btn btn-outline-light" data-dismiss="modal">Close</a>
</div>