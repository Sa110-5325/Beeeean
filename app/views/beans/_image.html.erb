<buttons type="button" class="btn btn-white" data-toggle="modal" data-target="#myModal">
  <%= attachment_image_tag bean, :image, fallback: "no-image.jpg", :size => "450x400" %>
</buttons>
<div class="modal fade mt-5 text-center" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <%= render "beans/chart" %>
  <div class="modal-dialog" role="document"></div>
  <button type="button" class="btn btn-outline-light" data-dismiss="modal">Close</button>
</div>