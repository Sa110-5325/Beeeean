<canvas width="300" height="120" id='RaderChart'></canvas>
<script>
    var ctx = document.getElementById("RaderChart");
    var bean = gon.bean;
      var RadarChart = new Chart(ctx, {

          type: 'radar',
          data: {
              labels: ["重さ", "苦味", "風味", "甘み", "酸味"],
              datasets: [{
                  label: "バランス",
                  fontColor: "white",
                  data: [bean.refresh, bean.bitter, bean.body, bean.fruity, bean.acidity],
                  backgroundColor: 'RGBA(255, 255, 102, 0.8)',
                  borderColor: 'RGBA(255, 255, 255, 1)',
                  borderWidth: 0.5
              }]
          },
          options: {
                display: true,
                text: '',
            lagend: {
              display: false
            },
            scale:{
                  pointLabels: {
                    fontColor: "white",
                    fontSize: 16
                  },
                  angleLines: {
                    color: 'RGBA(255, 255, 255, 1)',
                  },
                  gridLines: {
                    color: 'RGBA(255, 255, 255, 1)'
                  },
                  ticks:{
                    beginAtZero: true,
                    suggestedMin: 0,
                    suggestedMax: 5,
                    stepSize: 1,
                      callback: function(value, index, values) {
                        if (index % 1 === 0) {
                            return "";
                        }
                        return value;
                    }
                  }
                }
            }
        });
      </script>