<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render "layouts/sidebar" %>
    </div>
    <div class="col-sm-7 my-5">
      <h3 class="text-center"><%= @user.name %>'s Favorite Beans</h3>
      <% @user.favorites.each do |favorite| %>
        <div class="row my-5">
          <div class="col-sm-6">
            <section class="inview_re fadeIn_favorite_1">
              <%= link_to attachment_image_tag(favorite.bean, :image, fallback: "no-image.jpg", style: "width: 100%; height: 300px;", class: "prev rounded-circle"), bean_path(favorite.bean)  %>
            </section>
          </div>
          <div class="col-sm-6 mt-5">
            <section class="inview_re fadeIn_favorite_2">
              <div class="row justify-content-center">
                <strong class="h4"><%= favorite.bean.name %></strong>
              </div>
            </section>
            <section class="inview_re fadeIn_favorite_3">
              <div class="row justify-content-center">
                Â¥<%= favorite.bean.price.to_s(:delimited) %>
              </div>
            </section>
            <section class="inview_re fadeIn_favorite_4">
              <div class="row justify-content-center mx-2">
                <%= favorite.bean.info %>
              </div>
            </section>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>