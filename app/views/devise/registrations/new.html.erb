<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "layouts/sidebar" %>
    </div>
    <div class="col-7" style="margin: 100px 0 0 50px;">
      <h2>Sign up</h2>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <div class="row mt-5">
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="col-4">
            <%= f.label :name %>
          </div>
          <div class="col-6">
            <%= f.text_field :name,class: "form-control", autofocus: true %>
          </div>
        </div><br />
        <div class="row">
          <div class="col-4">
            <%= f.label :email %>
          </div>
          <div class="col-6">
            <%= f.email_field :email,class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>
        </div><br />
        <div class="row">
          <div class="col-4">
            <%= f.label :password %> (6文字以上)
          </div>
          <div class="col-6">
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password,class: "form-control", autocomplete: "new-password" %>
          </div>
        </div><br />
        <div class="row">
          <div class="col-4">
            <%= f.label :password %> (確認用)
          </div>
          <div class="col-6">
             <%= f.password_field :password_confirmation,class: "form-control", autocomplete: "new-password" %>
          </div>
        </div><br />
        <div class="row">
          <div class="col text-right">
            <%= f.submit "Sign Up", class: "btn btn-outline-light", :style => "margin-right: 65px; border-radius: 20px;" %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center" style="padding-top: 130px;">
    ©︎2021 Beeeean!!! Copy Right Reseved.
  </div>
</div>
