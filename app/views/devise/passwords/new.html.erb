<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "layouts/sidebar" %>
    </div>
    <div class="col-7" style="margin: 100px 0 0 50px;">
      <h2>Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="row mt-5">
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="col-4">
            <%= f.label :email %>
          </div>
          <div class="col-6">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div><br />
        <div class="row">
          <div class="col-8 text-right">
            <%= f.submit "Send me reset password instructions", class: "btn btn-outline-light" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

