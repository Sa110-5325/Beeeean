<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render "layouts/sidebar" %>
    </div>
    <div class="col-sm-7 mt-5">
      
      <% @users.each do |user| %>
        <% if current_user != user %>
          <div class="row my-4">
            <div class="col-3 text-right">
              <%= attachment_image_tag(user, :profile_image, fallback: "no-image.jpg", size: "70x70") %>
            </div>
            <div class="col-5 text-center my-auto">
              <%= user.name %>
            </div>
            <div class="col-4 text-center my-auto">
              <%= link_to "メッセージ", user_path(user), class: "btn-sm btn-light" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>