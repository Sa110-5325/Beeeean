<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render "layouts/sidebar" %>
    </div>
    <div class="col-sm-7 mt-5">
      <h4 class="text-center">チャット中のユーザー一覧</h4>
      <% @users.each do |user| %>
        <div class="row my-4">
          <div class="col-3 text-right">
            <%= link_to attachment_image_tag(user, :profile_image, fallback: "no-image.jpg", size: "70x70"),user_path(user) %>
          </div>
          <div class="col-5 text-center my-auto">
            <%= user.name %>
          </div>
          <div class="col-4 text-center my-auto">
            <%= link_to "メッセージ", chat_path(user.id), class: "btn-sm btn-light" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>