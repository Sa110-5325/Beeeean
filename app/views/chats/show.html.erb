<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render "layouts/sidebar" %>
    </div>
    <div class="col-sm-7 mt-5">
      <% @chats.each do |chat| %>
        <div class="row justify-content-center">
          <div class="col-sm-4">
            <%= chat.user.name %>
          </div>
          <div class="col-sm-6">
            <%= chat.message %>
          </div>
          <div class="col-sm-2">
            <%= link_to "削除", chat_path(chat), method: :delete %>
          </div>
        </div>
      <% end %>
    </div>

      <%= form_with model: @chat do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "送信" %>
      <% end %>
    
  </div>
</div>



