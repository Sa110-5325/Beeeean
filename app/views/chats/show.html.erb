<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render "layouts/sidebar" %>
    </div>
    <div class="col-sm-7">
      <%= form_with model: @chat do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "送信" %>
      <% end %>
      <table>
        <thead>
          <tr>
            <td>投稿者</td>
            <td>投稿内容</td>
          </tr>
        </thead>
        <tbody>
          <% @chats.each do |chat| %>
            <tr>
              <td><%= chat.user.name %></td>
              <td><%= chat.message %></td>
              <td><%= link_to "削除", chat_path(chat), method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



